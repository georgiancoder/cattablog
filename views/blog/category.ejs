<%- include('header'); %>

<%- include('carousel'); %>

<main>
	<section class="content">
        <% if(posts.length > 0) { %>
		<% posts[0].posts.forEach(function(post){ %>

        <section class="postPreview">
            <figure><img src="<%= post.mainpic.url %>" alt="Изображение" title="<%= post.title.ru %>"></figure>
            <h2><a href="/post/<%= post.slug.ru %>/<%= post._id %>"><%= post.title.ru %></a></h2>
            <p>
                <%= post.desc.ru %>
            </p><a href="/post/<%= post.slug.ru %>/<%= post._id %>">больше</a>
        </section>
        <% }) %>
        <%- pagination %>
        <% } else { %>
            статьи не найдены
        <% } %>
	</section>
    <%- include('aside'); %>
</main>

<%- include('footer'); %>